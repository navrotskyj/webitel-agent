{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"       // Важливо для WebRTC в браузері
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/view/**/*",
    "src/login/**/*",
    "assert"
  ]
}
